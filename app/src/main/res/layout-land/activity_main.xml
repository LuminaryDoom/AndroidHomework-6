<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:id="@+id/horizontal_layout"
    tools:context="nyc.c4q.scientificcalculator.MainActivity">

    <TextView
        android:id="@+id/math_view"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:textColor="#32CD32"
        android:text="0"
        android:textSize="50sp"
        android:gravity="start|center"
        android:freezesText="true"
        android:scrollHorizontally="true"
        android:singleLine="true"
        />

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_height="@dimen/land_row_size"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true">
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/button_rad"
            android:onClick="getText"
            android:text="@string/_radian"
            android:textSize="20sp"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/button_deg"
            android:onClick="getText"
            android:text="@string/_degree"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/button_factorial"
            android:text="@string/_factorial"
            android:onClick="getText"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/button_left_bracket"
            android:text="@string/l_bracket"
            android:onClick="getText"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/button_right_bracket"
            android:text="@string/r_bracket"
            android:onClick="getText"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/button_percent"
            android:text="@string/modulo"
            android:onClick="getText"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/button_allclear"
            android:text="@string/_delete"
            android:onClick="delete"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/land_row_size"
        android:layout_below="@+id/first_row"
        android:id="@+id/second_row">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_inverse"
            android:onClick="Inverse"
            android:text="Inv"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_sin"
            android:onClick="getText"
            android:text="sin"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/button_natural_log"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="ln"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_7"
            android:onClick="getText"
            android:text="7"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_8"
            android:onClick="getText"
            android:text="8"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"    
            android:text="9"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_division"
            android:text="/"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/land_row_size"
        android:layout_below="@+id/second_row"
        android:layout_alignParentStart="true"
        android:id="@+id/third_row">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_pi"
            android:text="pi"
            android:onClick="getText"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_cos"
            android:onClick="getText"
            android:text="cos"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/button_log"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="log"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_4"
            android:onClick="getText"
            android:text="4"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_5"
            android:onClick="getText"
            android:text="5"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="6"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_multiply"
            android:text="x"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/land_row_size"
        android:layout_below="@+id/third_row"
        android:layout_alignParentStart="true"
        android:id="@+id/fourth_row">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_euland"
            android:onClick="getText"
            android:text="e"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_tan"
            android:onClick="getText"
            android:text="tan"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/button_sqrt_root"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="sqrt"
            android:onClick="getText"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_1"
            android:onClick="getText"
            android:text="1"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_2"
            android:onClick="getText"
            android:text="2"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="3"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_minus"
            android:onClick="getText"
            android:text="-"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/land_row_size"
        android:layout_below="@+id/fourth_row"
        android:layout_alignParentStart="true"
        android:id="@+id/fifth_row">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_answer"
            android:text="Ans"
            android:onClick="Answer"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_exponential_form"
            android:onClick="getText"
            android:text="E"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/button_power"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="^"
            android:onClick="getText"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_zero"
            android:onClick="getText"
            android:text="0"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_decimal_point"
            android:onClick="getText"
            android:text="."
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:id="@+id/button_equals"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="calculate"
            android:text="="
            android:textSize="@dimen/button_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_plus"
            android:onClick="getText"
            android:text="+"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

</LinearLayout>
