<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.scientificcalculator.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/_0"
         android:gravity="right"
        android:textSize="@dimen/button_text_size"
        />
        <LinearLayout
            android:id="@+id/first_row"
            android:layout_marginTop="55dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_rad"
            android:text="Rad"
            android:textSize="@dimen/button_text_size"
        />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_deg"
            android:text="Deg"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_factorial"
            android:text="x!"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_left_bracket"
            android:text="("
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_right_bracket"
            android:text=")"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_percent"
            android:text="@string/_5"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_ac"
            android:text="AC"
            android:textSize="@dimen/button_text_size"/>
       </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_row"
        android:layout_alignParentStart="true"
        android:id="@+id/second_row">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_inverse"
            android:text="Inv"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_sin"
            android:text="sin"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/button_natural_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ln"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_7"
            android:text="7"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_8"
            android:text="8"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_division"
            android:text="\u00F7"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_row"
        android:layout_alignParentStart="true"
        android:id="@+id/third_row">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_pi"
            android:text="\u03A0"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cos"
            android:text="cos"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/button_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="log"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_4"
            android:text="4"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_5"
            android:text="5"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_multiply"
            android:text="x"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third_row"
        android:layout_alignParentStart="true"
        android:id="@+id/fourth_row">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_euland"
            android:text="e"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_tan"
            android:text="tan"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/button_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u221A"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_1"
            android:text="1"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_2"
            android:text="2"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_minus"
            android:text="-"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourth_row"
        android:layout_alignParentStart="true"
        android:id="@+id/fifth_row">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_answer"
            android:text="Ans"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_exponential_form"
            android:text="EXP"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/button_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x\u207F"
            android:textSize="@dimen/button_text_size" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_zero"
            android:text="0"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_decimal_point"
            android:text="."
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:id="@+id/button_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="@dimen/button_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_plus"
            android:text="+"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

</RelativeLayout>
