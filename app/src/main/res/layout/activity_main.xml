<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="nyc.c4q.sciencecalculator.MainActivity">

    <TextView
        android:id="@+id/math_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_height"
        android:gravity="left|center"
        android:text="0"
        android:textColor="@color/displayNumColor"
        android:textSize="@dimen/display_size">

    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ll_height">

        <Button
            android:id="@+id/button_left_bracket"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getOpen"
            android:text="@string/l_bracket"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_right_bracket"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getClose"
            android:text="@string/r_bracket"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_modulo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getSymbol"
            android:text="@string/modulo"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_allclear"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/ac"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ll_height2">

        <Button
            android:id="@+id/button_7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/num_7"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/num_8"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/num_9"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_division"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:onClick="getSymbol"
            android:text="@string/division"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ll_height2">

        <Button
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/num_4"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/num_5"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/num_6"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:onClick="getSymbol"
            android:text="@string/_x"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ll_height2"
        android:background="@color/background"
        android:backgroundTint="@color/background">

        <Button
            android:id="@+id/button_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/num_1"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/num_2"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="getText"
            android:text="@string/num_3"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:onClick="getSymbol"
            android:text="@string/_minus"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_zero"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ll_height2"
            android:onClick="getText"
            android:text="@string/num_0"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_decimal_point"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ll_height2"
            android:onClick="getSymbol"
            android:text="@string/_decimal_point"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_equals"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ll_height2"
            android:onClick="getSymbol"
            android:text="@string/_equals"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ll_height2"
            android:onClick="getSymbol"
            android:text="@string/_plus"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

</LinearLayout>